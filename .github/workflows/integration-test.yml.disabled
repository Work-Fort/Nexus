# nexus/.github/workflows/integration-test.yml.disabled
#
# This workflow runs real integration tests daily at 4:20 PM Mountain Time.
# Requires: GitHub runner with KVM + btrfs + network access
#
# To enable:
#   1. Provision GitHub runner with KVM support
#   2. Ensure runner has btrfs filesystem
#   3. Rename file to integration-test.yml

name: Integration Tests

on:
  schedule:
    # Daily at 4:20 PM Mountain Time (MST = UTC-7, MDT = UTC-6)
    # Using UTC: 11:20 PM (winter) / 10:20 PM (summer)
    - cron: '20 23 * * *'  # 11:20 PM UTC (MST)
  workflow_dispatch:

jobs:
  integration-test:
    runs-on: self-hosted  # Requires self-hosted runner with KVM

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Install mise
        uses: jdx/mise-action@v2

      - name: Run integration tests
        run: |
          cd nexus
          mise run integration-test
        env:
          RUST_BACKTRACE: 1

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: integration-test-results
          path: |
            nexus/integration-tests/target/
            ~/.local/share/nexus/
          retention-days: 7
